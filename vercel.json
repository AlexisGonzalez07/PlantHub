{
  "version": 2,
  "builds": [
    { "src": "client/**", "use": "@vercel/static-build", "config": { "distDir": "client/build" } },
    { "src": "server/**", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "client/build/static/$1" },
    { "src": "/(.*)", "dest": "server/server.js" }
  ]
}